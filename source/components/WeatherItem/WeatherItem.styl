.weatherItem {
	min-width 200px
	margin-right 20px
	background rgba(171, 215, 241, 0.5);
	box-sizing border-box
	border-radius 5px
	padding 10px
	&__inner {
		margin-bottom 10px
	}
	&__name {
		color black
		font-size 20px
		margin-bottom 10px
	}
	&__btn {
		display block
		padding 7px 15px
		letter-spacing 2px
		cursor pointer
	    background red
	    border none
	    color white
	}
}
